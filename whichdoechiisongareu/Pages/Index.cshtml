@page
@model whichdoechiisongareu.Pages.IndexModel

@{
    ViewData["Title"] = "Which Doechii Song Are You?";
}
<head>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>

</head>

<audio id="click-sound" src="audio/click.mp3" preload="auto"></audio>

<div class="center">
    <img src="images/doechii-up.svg" id="dc-up" class="sway-img sway-left" style="display:none;" />
    <img src="images/app-logo.svg" id="app-logo" class="sway-img" style="display:none;" />
    <h1 class="regular-text" id="tap-anywhere" style="display: none;">
    </h1>
    <img src="images/doechii-down.svg" id="dc-down" class="sway-img sway-right" style="display:none;"  />

    <div class="input-group" style="display:none;">
        <input type="text" class="regular-text" id="if-name" placeholder="Enter your name" maxlength="12" />
        <h1 class="regular-text" id="sign-title">And choose your star sign...</h1>
        <div class="sign-container">
            <img src="images/signs/aries.svg" class="sign-btn" data-value="aries"/>
            <img src="images/signs/taurus.svg" class="sign-btn" data-value="taurus" />
            <img src="images/signs/gemini.svg" class="sign-btn" data-value="gemini" />
            <img src="images/signs/cancer.svg" class="sign-btn" data-value="cancer" />
            <img src="images/signs/leo.svg" class="sign-btn" data-value="leo" />
            <img src="images/signs/virgo.svg" class="sign-btn" data-value="virgo" />
            <img src="images/signs/libra.svg" class="sign-btn" data-value="libra" />
            <img src="images/signs/scorpio.svg" class="sign-btn" data-value="scorpio" />
            <img src="images/signs/sagittarius.svg" class="sign-btn" data-value="sagittarius" />
            <img src="images/signs/capricorn.svg" class="sign-btn" data-value="capricorn" />
            <img src="images/signs/aquarius.svg" class="sign-btn" data-value="aquarius" />
            <img src="images/signs/pisces.svg" class="sign-btn" data-value="pisces" />
        </div>
       
    </div>
    <button class="default-btn" id="app-btn">see results</button>
    <!----<div id="loading-text" class="regular-text" style="display: none;">Generating vibe...</div>-->
    <div id="vibe-card" class="vibe-card" style="display: none;">
        <img src="/images/doechii-star.svg" id="card-img" />
        <div class="name">
            <img src="/images/username.svg" id="card-namebg" />
            <h2 class="regular-text" id="card-name"></h2>
        </div>
        <div class="card-body">
            <p id="card-prompt">Your Doechii song is</p>
            <h2 class="regular-text" id="card-song"></h2>
            <p id="card-content"></p>
        </div>
        <img src="images/app-logo.svg" id="card-logo" />
    </div>

    <div class="color-picker" style="display:none;">
        <button class="color-btn selected" data-bg="#BDB890" data-title="#7E7B60" data-text="#303030" style="background: var(--result-beige);"></button>
        <button class="color-btn" data-bg="#8F9964" data-title="#8F9964" data-text="#f7f7f7" style="background:var(--result-green);"></button>
        <button class="color-btn" data-bg="#405D3F" data-title="#405D3F" data-text="#f7f7f7" style="background:var(--result-darkgreen);"></button>
    </div>
    <div class="btn-group" style="display:none;">
        <button class="default-btn" id="download-btn">Download</button>
        <button class="default-btn" id="try-btn">Try again</button>
    </div>
  
    
</div>


